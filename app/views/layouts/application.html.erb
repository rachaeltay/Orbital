<!--<%# end %>-->
<!--<%# if alert %>-->
<!--  <p class="alert alert-danger"><%#= alert %></p>-->
<!--<%# end %>  -->

<% if user_signed_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a><%= link_to "Vento", posts_path, method: :get, class:"navbar-brand" %></a>
      </div>
      <ul class="nav navbar-nav navbar-left">
        <li>
          <%= link_to new_post_path, method: :get do %>
          <%= image_tag "edit.png", size: "20" %>
          <% end %>
        </li>
        <li style="padding: 0 0 0 0;">
          <%= link_to current_user,  method: :get do %>
          <%= image_tag "calendar.png", size: "20" %>
          <% end %>
        </li>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <%= image_tag "power-button.png", size: "20" %>&nbsp; Logout
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  
<% else %>
   <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a><%= link_to "Vento", posts_path, method: :get, class:"navbar-brand" %></a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to new_user_session_path do %>
            <%= image_tag "login.png", size: "20" %>&nbsp; Login
          <% end %> 
        </li>
      </ul>
    </div>
  </nav>
  
<% end %>

<%= yield %>
</body>
</html>
